{% extends view('service-point-name-for-cart-item', '@SprykerFeature:SelfServicePortal') %}

{% block body %}
    {% block title %}
        {% if data.servicePointName %}
            {% block titleInner %}
                <div class="title--h6">
                    <strong>{{ 'self_service_portal.service.cart_item.service_point.name' | trans }}</strong>:

                    {% block serviceName %}
                        {{ data.servicePointName }}
                    {% endblock %}
                </div>
            {% endblock %}
        {% endif %}
    {% endblock %}

    {% if data.scheduledAt %}
        <div class="title--h6 spacing-bottom--big"><strong>{{ 'self_service_portal.service.cart_item.scheduled_att' | trans }}</strong>: {{ data.scheduledAt | formatDateTime }}</div>
    {% endif %}
{% endblock %}
