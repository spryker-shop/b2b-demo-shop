{% extends model('component') %}

{% define config = {
    name: 'agent-control-item'
} %}

{% define data = {
    title: 'agent.control_bar.username' | trans,
    buttonLink: url('agent_logout'),
    buttonTitle: 'agent.control_bar.logout' | trans,
    type: 'agent',
    firstName: '',
    lastName: '',
} %}

{% block body %}
    <div class="{{ config.name }}__col {{ config.name }}__icon">
        {% include atom('icon') with {
            modifiers: ['bigger'],
            data: {
                name: data.type,
            },
        } only %}
    </div>
    <div class="{{ config.name }}__col {{ config.name }}__info">
        <div class="{{ config.name }}__title">
            {{- data.title -}}
        </div>
        <a href="{{ path(data.type ~ '/overview') }}" class="{{ config.name }}__name">
            {{- data.firstName }} {{ data.lastName -}}
        </a>
    </div>
    <div class="{{ config.name }}__col {{ config.name }}__button-wrapper">
        <a href="{{ data.buttonLink }}" class="{{ config.name }}__button" title="{{ data.buttonTitle }}">
            {% include atom('icon') with {
                modifiers: ['small'],
                data: {
                    name: 'cross',
                },
            } only %}
        </a>
    </div>
{% endblock %}
