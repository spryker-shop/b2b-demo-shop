{% extends view('dashboard-inquiry', '@SprykerFeature:SelfServicePortal') %}

{% block table %}
    {% set columns = columns[:2]
        | merge([{
            id: 'subject',
            title: 'customer.self_service_portal.inquiry.list.subject' | trans,
        }])
        | merge(columns[2:])
    %}

    {% set rows = rows | map((row, index) => row | merge({
        subject: data.inquiries[index].subject,
        actions: row.actions | map(action => action | merge({
            iconModifier: 'big',
            icon: 'eye',
            title: action.label,
        })),
    })) %}

    {{ parent() }}
{% endblock %}
