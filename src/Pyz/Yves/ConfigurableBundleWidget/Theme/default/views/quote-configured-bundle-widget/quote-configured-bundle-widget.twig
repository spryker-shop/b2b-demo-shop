{% extends view('quote-configured-bundle-widget', '@SprykerShop:ConfigurableBundleWidget') %}

{% define data = {
    isQuantityVisible: true,
} %}

{% block bundleItem %}
    {% include molecule('configured-bundle', 'ConfigurableBundleWidget') with {
        data: {
            bundle: bundle,
            items: data.items,
            currencyIsoCode: data.currencyIsoCode,
            priceMode: data.priceMode,
            isQuantityChangeable: data.isQuantityChangeable,
            isEditable: data.isEditable,
            isQuantityVisible: data.isQuantityVisible,
            numberFormatConfig: numberFormatConfig,
            ajaxTriggerAttribute: data.ajaxTriggerAttribute,
        },
    } only %}
{% endblock %}
