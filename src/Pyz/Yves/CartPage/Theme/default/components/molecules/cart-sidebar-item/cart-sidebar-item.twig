{% extends model('component') %}

{% define config = {
    name: 'cart-sidebar-item',
} %}

{% define data = {
    title: '',
    cart: required,
    isQuoteValid: false,
    isQuoteEditable: false,
    isAccordionItem: true,
    accordionItemClass: '',
    accordionIconClass: '',
    ajaxTriggerAttribute: '',

} %}
{% block titleClasses %}
    {% if data.isAccordionItem %}
        {{ config.jsName }}__title {{ data.accordionItemClass }}
    {% endif %}
{% endblock %}

{% block titleAttributes %}{% endblock %}

{% block contentClasses %}
    {{ data.isAccordionItem ? 'is-hidden' }}
{% endblock %}

{% block body %}
    {% block title %}
        <h5 class="{{ config.name }}__title {{ block('titleClasses') }}" {{ block('titleAttributes') }}>
            {% block titleText %}
                {{ data.title }}
            {% endblock %}

            {% block icon %}
                {% if data.isAccordionItem %}
                    <span class="icon icon--toggler-cross {{ data.accordionIconClass }}"></span>
                {% endif %}
            {% endblock %}
        </h5>
    {% endblock %}

    {% block content %}
        <div class="{{ config.name }}__content {{ block('contentClasses') }}">
            {% block contentInner %}{% endblock %}
        </div>
    {% endblock %}
{% endblock %}
