{% extends model('component') %}
{% import _self as component %}

{% define config = {
    name: 'section',
    tag: 'section'
} %}

{% define data = {
    title: false,
    innerClass: ''
} %}

{% block body %}
    <div class="{{ config.name }}__inner {{ data.innerClass }}">
        {% if data.title %}
            <h2 class="{{ component.renderClass(config.name ~ '__title', modifiers) }}">{{ data.title }}</h2>
        {% endif %}

        {% block inner %}{% endblock %}
    </div>
{% endblock %}
