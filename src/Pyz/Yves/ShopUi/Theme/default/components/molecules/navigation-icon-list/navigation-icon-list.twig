{% extends model('component') %}

{% define config = {
    name: 'navigation-icon-list',
    tag: 'nav'
} %}

{% define data = {
    nodes: []
} %}

{% block body %}
    <ul class="menu menu--inline">
        {% for node in data.nodes %}
            {% embed atom('node') with {
                class: 'menu__item',
                config: {
                    tag: 'li'
                },
                data: {
                    node: node
                },
                embed: {
                    name: config.name
                }
            } only %}
                {% block url %}
                    <a class="link link--alt" href="{{ data.node.url }}" title="{{ data.node.title }}">
                        {% include atom('icon') with {
                            modifiers: ['big'],
                            data: {
                                name: data.node.cssClass
                            }
                        } only %}
                    </a>
                {% endblock %}

                {% block externalUrl %}
                    <a class="link link--alt" href="{{ data.node.url }}" target="_blank" title="{{ data.node.title }}">
                        {% include atom('icon') with {
                            modifiers: ['big'],
                            data: {
                                name: data.node.cssClass
                            }
                        } only %}
                    </a>
                {% endblock %}

                {% block other %}
                    {% include atom('icon') with {
                        modifiers: ['big'],
                        class: embed.name ~ '__icon ' ~ data.node.cssClass ~ '__icon',
                        data: {
                            name: data.node.cssClass
                        }
                    } only %}
                {% endblock %}
            {% endembed %}
        {% endfor %}
    </ul>
{% endblock %}
