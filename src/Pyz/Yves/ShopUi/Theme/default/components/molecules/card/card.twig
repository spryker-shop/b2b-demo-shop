{% extends model('component') %}

{% define config = {
    name: 'card',
    tag: 'article'
} %}

{% define data = {
    name: required,
    url: required,
    imageUrl: required,
    description: ''
} %}

{% block body %}
    <div class="{{config.name}}__container">
        {% block image %}
            <a href="{{data.url}}">
                {% include atom('thumbnail') with {
                    attributes: {
                        alt: data.name,
                        src: data.imageUrl,
                        title: data.name
                    }
                } only %}
            </a>
        {% endblock %}

        {% block content %}
            {% block name %}
                <strong>{{data.name}}</strong>
            {% endblock %}

            {% block description %}
                {% if data.description is not empty %}
                    <p>{{data.description}}</p>
                {% endif %}
            {% endblock %}
        {% endblock %}

        {% block actionsContainer %}
            <div class="{{config.name}}__actions-container">
                {% block actions %}
                    <a class="button button--expand" href="{{data.url}}">
                        {{'product.view' | trans}}
                        {% include atom('icon') with {
                            modifiers: ['small'],
                            data: {
                                name: 'angle-double-right'
                            }
                        } only %}
                    </a>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
