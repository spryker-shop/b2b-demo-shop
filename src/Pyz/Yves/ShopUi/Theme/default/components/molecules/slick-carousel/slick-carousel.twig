{% extends model('component') %}

{% define config = {
    name: 'slick-carousel',
    tag: 'slick-carousel'
} %}

{% define data = {
    slides: [],
    containerClass: ''
} %}

{% define attributes = {
    'data-json': ''
} %}

{% block body %}

    <div class="{{config.name}}__container {{ data.containerClass }} is-hidden">
        {% block slides %}
            {% for slide in data.slides %}
                {{ slide }}
            {% endfor %}
        {% endblock %}
    </div>

{% endblock %}

