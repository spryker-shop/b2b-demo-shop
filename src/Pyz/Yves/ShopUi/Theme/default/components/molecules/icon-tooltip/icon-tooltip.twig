{% extends model('component') %}

{% define config = {
    name: 'icon-tooltip',
    tag: 'span'
} %}

{% define data = {
    icon: required,
    text: required,
    classIcon: ''
} %}

{% block body %}
    {% include atom('icon') with {
        modifiers: modifiers,
        class: data.classIcon,
        attributes: {
            'aria-label': data.text,
        },
        data: {
            name: data.icon
        }
    } only %}
    <span class="{{ config.name }}__tooltip">{{ data.text }}</span>
{% endblock %}
