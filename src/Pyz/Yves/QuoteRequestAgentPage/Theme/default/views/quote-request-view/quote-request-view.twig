{% extends view('quote-request-view', '@SprykerShop:QuoteRequestAgentPage') %}

{% block customerContent %}
    {% include molecule('action-bar') with {
        data: {
            title: data.title,
            actions: [
                {
                    title: 'quote_request_agent_widget.create_new_request' | trans,
                    url: url('agent/quote-request/create'),
                    primary: false,
                    icon: 'plus',
                },
            ],
        },
    } only %}

    {% if data.quoteRequests %}
        {% include molecule('quote-request-table', 'QuoteRequestAgentPage') with {
            data: {
                quoteRequests: data.quoteRequests,
            },
        } only %}
        {% include molecule('pagination') with {
            data: data.pagination,
        } only %}
    {% else %}
        {{ 'quote_request_page.quote_request.view.empty' | trans }}
    {% endif %}
{% endblock %}
